Options +FollowSymlinks -Indexes

AddDefaultCharset off

AddType application/x-httpd-php .appcache

<IfModule mod_php5.c>
    
    php_value short_open_tag 1
    
</IfModule>

<IfModule mod_rewrite.c>
    
    RewriteEngine on

    # You may need RewriteBase on some servers (debian). NOTE: / is document root.
    #RewriteBase /

    # Rewrite resource URIs to minify
    RewriteRule ^js/(.*\.js)$ min/?g=$1 [NE]
    RewriteRule ^css/(.*\.css)$ min/?g=$1 [NE]
    RewriteRule ^css/(.*\.less)$ min/?g=$1 [L,NE]
    
    # Rewrite sms callbacks
    RewriteRule ^sms/callback/([0-9]+)(.*)$ sms.php?request=callback&user=$1&$2 [QSA,L]

    # Location request - images
    RewriteCond %{SCRIPT_FILENAME} !-d  
    RewriteCond %{SCRIPT_FILENAME} !-f  
    RewriteRule ^l/.*img/(.*)$ img/$1 [L]
    
    # Location request - first try
    RewriteCond %{SCRIPT_FILENAME} !-d  
    RewriteCond %{SCRIPT_FILENAME} !-f  
    RewriteRule ^l/([0-9]+)/([0-9]*)$ track/locate.php?id=$1&phone=$2 [L]

    # Location request - appcache
    RewriteCond %{SCRIPT_FILENAME} !-d  
    RewriteCond %{SCRIPT_FILENAME} !-f  
    RewriteRule ^l/([0-9]+)/.*appcache$ track/locate.appcache.php?id=$1 [L]
    
    # Location request - abort
    RewriteCond %{SCRIPT_FILENAME} !-d  
    RewriteCond %{SCRIPT_FILENAME} !-f  
    RewriteRule ^a/([0-9]+)/([0-9]*)$ track/abort.php?id=$1&phone=$2 [L]

    # Location report
    RewriteCond %{SCRIPT_FILENAME} !-d
    RewriteCond %{SCRIPT_FILENAME} !-f  
    RewriteRule ^r/([0-9]+)/([0-9]*)/(.*)/(.*)/(.*)/(.+)$ track/report.php?id=$1&phone=$2&lat=$3&lon=$4&acc=$5&alt=$6 [L]
    
    
</IfModule>
