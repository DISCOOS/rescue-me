<div id="confirm" class="modal hide" tabindex="-1" role="dialog" aria-labelledby="confirm-label" aria-hidden="true">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
        <h3 id="confirm-label">{% trans "Confirm" %}</h3>
    </div>
    <div class="modal-body">
    	{% block message %}
    		{% trans "Are you sure?" %}
    	{% endblock %}
    </div>
    <div class="modal-footer">
        <a class="btn btn-primary" href="{% block target %}{% endblock %}">{% trans "Yes" %}</a>
        <button class="btn" data-dismiss="modal" aria-hidden="true">{% trans "No" %}</button>
    </div>
</div>