{% extends "design_admin.twig" %}

{% block content %}
<form id="user-form" name="user-form" method="post" class="form well" action="/admin/password/recover?SILEX">
    <div class="form-header">
        <h3 id="user-label">{% trans "Reset password" %}</h3>
    </div>
    
    <div id="user-body" class="form-body">
		<div class="row-fluid">
			<div class="span2">
			    <label class="control-label" for="country">{% trans "Mobile country" %}</label>
			    <select id="country" name="country" type="select"
			    	class="input-block-level" required>
			    {% for code,name in countries %}
			    	<option value="{{code}}" {% if selected_country == code %}selected="selected"{% endif %}>{{name}}</option>
			    {% endfor %}
				</select>
			</div>
			
			<div class="span2">
			    <label class="control-label" for="mobile">{% trans "Mobile" %}</label>
			    <input id="mobile" name="mobile" type="tel" 
			           placeholder="{% trans "Mobile" %}" 
			           class="input-block-level" required pattern="[0-9]*" value="">
			</div>
			
			<div class="span3">
			    <label class="control-label" for="email">{% trans "E-mail" %}</label>
			    <input id="email" name="email" type="email" 
			           placeholder="{% trans "E-mail" %}" 
			           class="input-block-level" required value="">
			</div>
		</div>
    </div>
    <div class="form-footer">
		<button type="submit" class="btn btn-primary">{% trans "Reset" %}</button>
        <button type="reset" class="btn" onclick="history.go(-1);">{% trans "Cancel" %}</button>
	</div>
</form>
{% endblock %}