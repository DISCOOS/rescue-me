<div class="row-fluid text-center page-header">
    <div class="span6">
        <h3>{{ name | raw}}</h3>
    </div>
    <div id="state" class="span6 label label-{{ status.label }}">
        <i class="icon icon-{{ status.icon }} fill circle {{ status.color }} icon-white"></i>
        {{ status.short | raw}}
    </div>
</div>

<div class="row-fluid">
    <div class="span6 v-space">
        <h4>{{ status.title }}</h4>
        <div id="status">
            {{ status.reasons | raw }}
            {{ status.details | raw }}
        </div>
    </div>
    <div class="span6 v-space">
        <h4>{{ actions.title }}</h4>
        {{ message | raw}}
        <ul id="actions" class="nav nav-tabs nav-stacked">
            {% for action in actions.items %}
                <li> {{ action | raw }} </li>
            {% endfor %}
        </ul>
    </div>
</div>

<div class="row-fluid">
    <h4>{{ details.title | raw }}</h4>
    <div id="accordion" class="accordion 12">
        <div class="accordion-group span6">
            <div class="accordion-heading">
                <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#details">
                    {{ handset.title | raw }}
                </a>
            </div>
            <div id="details" class="accordion-body collapse in">
                <div class="accordion-inner">
                    {{ handset.details | raw }}
                </div>
            </div>
        </div>
        <div class="accordion-group span6">
            <div class="accordion-heading">
                <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#events">
                    {{ events.title | raw }}
                </a>
            </div>
            <div id="events" class="accordion-body collapse in">
                <div class="accordion-inner">
                    <dl class="dl-horizontal">
                        {% for event in events.items %}
                            <dt> {{ event.time | raw }} </dt>
                            <dd> {{ event.text | raw }} </dd>
                        {% endfor %}
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>